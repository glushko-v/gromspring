<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="com"/>

    <bean id = "route" class="com.hw1.Route">
        <constructor-arg name="id" value="321"/>
    </bean>


    <bean id = "step" class = "com.hw1.Step">
        <constructor-arg value="123"/>
    </bean>
    <bean id = "service" class="com.hw1.Service"/>


    <bean id = "itemService" class="com.hw2.ItemService"/>
    <bean id = "itemDAO" class="com.hw2.ItemDAO"/>






</beans>
